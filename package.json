{
    "name": "vscode-tilt",
    "displayName": "Tiltfile",
    "description": "The `Tiltfile` extension provides an improved editing experience for `Tiltfile` authors.",
    "icon": "assets/tilt-transparent.png",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "Tiltfile",
        "Tilt",
        "tilt",
        "Kubernetes",
        "kubernetes",
        "k8s",
        "development",
        "dev env",
        "docker"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tiltfile",
                "aliases": [
                    "Tiltfile",
                    "tiltfile"
                ],
                "extensions": [
                    "Tiltfile",
                    ".tiltfile"
                ],
                "configuration": "./syntaxes/tiltfile.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tiltfile",
                "scopeName": "source.tiltfile",
                "path": "./syntaxes/tiltfile.tmLanguage.json"
            }
        ],
        "configuration": [
            {
                "title": "Tiltfile LSP",
                "properties": {
                    "tiltfile.trace.server": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": "off",
                        "description": "Log requests and responses to Tiltfile LSP",
                        "enum": [
                            "off",
                            "messages",
                            "compact",
                            "verbose"
                        ],
                        "pattern": "off|messages|compact|verbose",
                        "patternErrorMessage": "Invalid log level"
                    }
                }
            }
        ],
        "commands": [
	    {
	        "command": "tiltfile.restartServer",
	        "title": "Restart Tiltfile LSP Server"
	    }
	]
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:tiltfile"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^17.0.13",
        "@types/vscode": "^1.63.0",
        "@vscode/test-electron": "^1.6.1",
        "typescript": "^4.4.3"
    }
}
